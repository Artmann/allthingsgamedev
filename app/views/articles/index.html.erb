<div class="masonry-wrapper">
    <div class="masonry">
        <% @articles.each do |article| %>
            <div
                class="item"
                style="background: url(<%= article.feature_image.url %>); background-size: cover;"
            >
                <div class="overlay">
                    <%= link_to article.title, article_path(article.slug) %>
                    <%= raw markdown article.excerpt %>
                </div>
            </div>

        <% end %>
    </div>
</div>